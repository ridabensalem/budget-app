<div class='container  category_new mt-5 mb-5 row justify-content-center rounded pt-5 pb-5'>
 
<%= form_with model: @group, class: "mx-auto" ,url: user_groups_path do |form| %>
  <div class="field font-light mb-3 row justify-content-center">
    <%= form.text_field :name, class: "form-control w-25 col-md-6", placeholder: 'Category Name', autofocus: true %>
  </div>
  
  <div class="field font-light mb-3 d-flex justify-content-center mt-5 gap-3">
    <%= form.label :Photo , class: 'text-light '%>
    <%= form.select :icon, [['Food', 'Tajine.jpeg'], ['Drinks', 'drink.jpg'],
                           ['Tech', 'iphone.jpg'], ['Candy', 'candy.jpg'], ['cars', 'car.jpg'],
                           ['candles', 'candle.jpg'], ['home', 'chair.jpg'], ['elctro', 'electro.jpg'],
                           ['rugs', 'rug.jpg'], ['workshop', 'hammer.jpg'], ['gems', 'ruby.jpg'],
                           ['flowers', 'flower.jpg'], ['glasses', 'glasses.jpg'], ['rings', 'ring.jpg']], autofocus: true %>
  </div>
  <div class="d-flex justify-content-center gap-5 pb-5 mt-5">
  <div class="d-flex align-items-center ">
    <%= form.submit "Save", class: "btn btn-warning text-light mx-auto" %>
  </div>
  <div class="p">
  <%= link_to "Back", user_groups_path, class: "btn btn-warning text-light back" %>
  </div>
 </div>
<% end %>
</div>
</div>